[user]
  name = Javier Juarez
  email = javier.juarez@gmail.com
[color]
  status = auto
  branch = auto
[alias]
  co      = checkout
  ci      = commit
  br      = branch
  st      = status
  last    = log -1 HEAD
  unstage = reset HEAD --
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
  prompt = false
[diff]
  tool = Kaleidoscope
  st = status
  co = checkout
[difftool]
  prompt = false
[mergetool]
  keepBackup = true
