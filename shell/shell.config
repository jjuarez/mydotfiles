SHELL_CONFIG_BASE=${MYDOTFILES}/shell

##
# User specific profiles
for p in ${SHELL_CONFIG_BASE}/profile.d/*.profile; do 
  source ${p}
done 2>/dev/null

## 
# Command warppers
for c in ${SHELL_CONFIG_BASE}/command.d/*.command; do
  source ${c}
done 2>/dev/null

##
# General environment
[ "${SHELL}" = "bash" ] && {

  PS1='\u@\[\033[01;32m\]\h\[\033[00m\]:\[\033[01;34m\]\W\[\033[00m\]\[\033[01;33m\]$(/usr/bin/vcprompt)\[\033[00m\]$ '

  ##
  # bash history
  export HISTTIMEFORMAT="$(hostname -s) %h/%d %H:%M:%S "
  export HISTSIZE=2048
}

##
# Set of alias
source ${SHELL_CONFIG_BASE}/aliases

##
# General User environment
export EDITOR='vim -N'
export PAGER=most
