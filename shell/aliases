##
# Alias
#
alias vim='vim -N'


case "`uname`" in
	
  Darwin*)
    alias md5sum=gmd5sum''
    alias ls='ls -hG'
    alias netstat='netstat -an -p tcp -f inet'
    
    # Alias over brew installation
    [ "`brew --prefix`" != "" ] && {
    
      alias tar='`brew --prefix`/bin/gtar'
      alias find='`brew --prefix`/bin/find'
    }
    ;;  
    
  Linux*)
    alias ls='ls -h --color'
    ;;
  *)
    ;;
esac
