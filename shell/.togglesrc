declare -A TOGGLES_CONFIGURATION=(
  [direnv]=true
  [fzf]=true
  [github]=true
  [go]=true
  [nvm]=true
  [python]=false
  [ruby]=true
  [tfenv]=true
  [travis]=true
)

toggles::fzf() {
  if command -v fzf >/dev/null 2>&1; then
    [[ -s "${HOME}/.fzf.zsh" ]] && source "${HOME}/.fzf.zsh"
  fi
}

toggles::tfenv() {
  command -v tfenv >/dev/null 2>&1 && export PATH="${HOME}/.tfenv/bin:${PATH}"
}

toggles::python() {
  export CFLAGS="-O2 -I$(brew --prefix openssl)/include"
  export LDFLAGS="-L$(brew --prefix openssl)/lib"

  command -v pyenv >/dev/null 2>&1 && eval "$(pyenv init -)"
}

toggles::nvm() {
  if [ -s "/usr/local/opt/nvm/nvm.sh" ]; then
    export NVM_DIR="${HOME}/.nvm"

    [ -d "${NVM_DIR}" ] || mkdir -p "${NVM_DIR}"
    [ -s "/usr/local/opt/nvm/nvm.sh" ] && . "/usr/local/opt/nvm/nvm.sh"
  fi
}

toggles::ruby() {
  command -v rbenv >/dev/null 2>&1 && eval "$(rbenv init -)"
}

toggles::go() {
  [[ -s "${HOME}/.gorc" ]] && source "${HOME}/.gorc"
}

toggles::github() {
  [[ -d "${HOME}/.githubrc" ]] && source "${HOME}/.githubrc"
}

toggles::travis() {
  [[ -d "${HOME}/.travis/travis.sh" ]] && source "${HOME}/.travis/travis.sh"
}

toggles::direnv() {
  command -v direnv >/dev/null 2>&1 && eval "$(direnv hook zsh)"
}

# ::main::
echo -en "Tggls: "
for t activated in ${(kv)TOGGLES_CONFIGURATION}; do
  if [ "${activated}" = true ]; then
    toggles::${t} && echo -en "${t}:√ "
  fi
done
echo
