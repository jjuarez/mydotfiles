Host github.com
  HostName     github.com
  IdentityFile ~/.ssh/id_rsa.fon
  User         jjuarez

Host gitlab.fon.ofi
  Hostname gitlab.fon.ofi
  IdentityFile ~/.ssh/id_rsa.fon
  User         javier.juarez@fon.com

Host *
  IdentitiesOnly         yes
  IdentityFile           ~/.ssh/id_rsa
  UserKnownHostsFile     /dev/null
  StrictHostKeyChecking  no
  VerifyHostKeyDNS       no
  KeepAlive              yes
  ForwardX11             no
  ForwardAgent           yes
  ServerAliveInterval    15
  ServerAliveCountMax    4
  Compression            yes
  CheckHostIP            yes
  LogLevel               quiet
  User                   root
  Port                   22

