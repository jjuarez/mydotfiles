# Fon AWS new infrastructure
#
Host bastion-pro-001.fon.int
  HostName     ec2-54-171-112-79.eu-west-1.compute.amazonaws.com

Host *.fon.int
  IdentityFile ~/.ssh/HomeWiFiMgmtSSHAccessKey.pem
  User         admin

Host *
  IdentitiesOnly         yes
  UserKnownHostsFile     /dev/null
  StrictHostKeyChecking  no
  VerifyHostKeyDNS       no
  KeepAlive              yes
  ForwardX11             no
  ForwardAgent           yes
  ServerAliveInterval    15
  ServerAliveCountMax    4
  Compression            yes
  CheckHostIP            yes
  LogLevel               quiet
  Port                   22

