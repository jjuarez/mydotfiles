Host github.com
  HostName     github.com
  IdentityFile ~/.ssh/id_rsa.github
  User         jjuarez

Host bitbucket.org
  HostName     bitbucket.org
  IdentityFile ~/.ssh/id_rsa.4iq.mbp.bitbucket
  User         javier_juarez

Host raspberrypi
  HostName     192.168.0.3
  IdentityFile ~/.ssh/id_dsa.raspberrypi
  User         root

Host *
# ControlMaster          auto
# ControlPath            /tmp/ssh_mux_%h_%p_%r
  IdentitiesOnly         yes
  PubkeyAcceptedKeyTypes +ssh-dss
  IdentityFile           ~/.ssh/id_rsa
  UserKnownHostsFile     /dev/null
  StrictHostKeyChecking  no
  VerifyHostKeyDNS       no
  KeepAlive              yes
  ForwardX11             no
  ForwardAgent           yes
  ServerAliveInterval    15
  ServerAliveCountMax    4
  Compression            yes
  CheckHostIP            yes
  LogLevel               quiet
  User                   root
  Port                   22

