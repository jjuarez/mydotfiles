# Fon AWS new infrastructure

Host puppetserver.fon.int
  ProxyJump    bastion-pro-001.fon.int

Host puppetdb.fon.int
  ProxyJump    bastion-pro-001.fon.int

Host prometheus.fon.int
  ProxyJump    bastion-pro-001.fon.int

Host alertmanager.fon.int
  ProxyJump    bastion-pro-001.fon.int

Host grafana.fon.int
  ProxyJump    bastion-pro-001.fon.int

Host *.fon.int
  IdentityFile ~/.ssh/HomeWiFiMgmtSSHAccessKey.pem
  User         admin

Host bastion-pro-001.fon.int
  HostName     ec2-54-246-254-109.eu-west-1.compute.amazonaws.com

Host *
  IdentitiesOnly         yes
  UserKnownHostsFile     /dev/null
  StrictHostKeyChecking  no
  VerifyHostKeyDNS       no
  KeepAlive              yes
  ForwardX11             no
  ForwardAgent           yes
  ServerAliveInterval    15
  ServerAliveCountMax    4
  Compression            yes
  CheckHostIP            yes
  LogLevel               quiet
  Port                   22
