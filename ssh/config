# Fon AWS new infrastructure
Host bastion
  HostName bastion-fon-mgmt-pro-001.threesadtigerseatwheat.com
  User     admin

Host *.fon.int
  User      admin
  ProxyJump bastion

Host *
  UserKnownHostsFile     /dev/null
  StrictHostKeyChecking  no
  VerifyHostKeyDNS       no
  KeepAlive              yes
  ForwardX11             no
  ForwardAgent           yes
  ServerAliveInterval    15
  ServerAliveCountMax    4
  Compression            yes
  CheckHostIP            yes
  LogLevel               quiet
  Port                   22
