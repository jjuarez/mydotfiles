  User javier.juarez@gmail.com


##
# Common config tuenti.int
Host *.tuenti.int
  UserKnownHostsFile    /dev/null
  ControlMaster         auto
  ControlPath           /tmp/ssh_mux_%h_%p_%r
  ControlPersist        1h
  IdentityFile          ~/.ssh/id_dsa.tuenti
  KeepAlive             yes
  ForwardX11            no
  ForwardAgent          yes
  ServerAliveInterval   15
  ServerAliveCountMax   4
  Compression           yes
  CheckHostIP           yes
  VerifyHostKeyDNS      no
  StrictHostKeyChecking no
  User                  root
  Port                  22

Host *.tuenti.local
  UserKnownHostsFile    /dev/null
  ControlMaster         auto
  ControlPath           /tmp/ssh_mux_%h_%p_%r
  ControlPersist        1h
  IdentityFile          ~/.ssh/id_dsa.tuenti
  KeepAlive             yes
  ForwardX11            no
  ForwardAgent          yes
  ServerAliveInterval   15
  ServerAliveCountMax   4
  Compression           yes
  CheckHostIP           yes
  VerifyHostKeyDNS      no
  StrictHostKeyChecking no
  User                  root
  Port                  22
