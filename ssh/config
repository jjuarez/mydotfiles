  HostName 192.168.1.2
  IdentityFile ~/.ssh/id_dsa.raspberrypi
  User root

Host lms.fe0
  HostName 178.62.250.169
  IdentityFile ~/.ssh/id_dsa
  User javi

Host github.com
  HostName github.com
  IdentityFile ~/.ssh/id_dsa.tuenti
  User jjuarez

Host gen01.tuenti.int
  HostName gen01.tuenti.int
  IdentityFile ~/.ssh/id_dsa.tuenti
  User jjuarez

Host bastion
  HostName gen01.tuenti.int
  IdentityFile ~/.ssh/id_dsa
  User jjuarez

Host *.tuenti.int
  ProxyCommand ssh -t -q -A bastion ssh %h %p
  IdentityFile ~/.ssh/id_dsa
  LogLevel DEBUG
  User root

##
# Common config tuenti.int
Host *
  UserKnownHostsFile    /dev/null
  ControlMaster         auto
  ControlPath           ~/.ssh/ssh_control_%h_%p_%r
  ControlPersist        1h
  IdentityFile          ~/.ssh/id_dsa
  KeepAlive             yes
  ForwardX11            no
  ForwardAgent          yes
  ServerAliveInterval   15
  ServerAliveCountMax   4
  Compression           yes
  CheckHostIP           yes
  VerifyHostKeyDNS      no
  StrictHostKeyChecking no
  User                  root
  Port                  22

