alias reload='source ${HOME}/.bash_profile'
alias vim='vim -N'
alias h?='history | grep '
alias ..='cd ..'
alias .='cd - 2>/dev/null'
[ -x /Applications/QuickSynergy.app/Contents/Resources/synergys ] && alias synergys=/Applications/QuickSynergy.app/Contents/Resources/synergys


case "`uname`" in
	
  Darwin*)
    alias md5sum='md5'
    alias ls='ls -hG'
    alias netstat='netstat -an -p tcp -f inet'
    
    # Alias over brew installation
    [ "`brew --prefix`" != "" ] && {
    
      alias tar='`brew --prefix`/bin/gtar'
      alias find='`brew --prefix`/bin/find'
    }
    ;;  
    
  Linux*)
    alias ls='ls -h --color'
    ;;
  *)
    ;;
esac
