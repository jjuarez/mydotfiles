[user]
	name = javier.juarez
	email = Javier.Juarez.Martinez@ibm.com

[color]
  diff        = auto
  status      = auto
  branch      = auto
  interactive = auto
  ui          = true
  pager       = true

[alias]
  ci         = commit
  co         = checkout
  st         = status -sb
  branches   = branch -a
  merged     = branch --remotes --merged
  remotes    = remote -v
  last       = log -1 HEAD
  unstage    = reset HEAD --
  tree       = log --oneline --decorate --graph
  ts         = tag --sort=-committerdate
  lg         = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=iso8601-strict

[github]
  user = jjuarez

[push]
  default = matching

[core]
  excludesfile = ~/.gitignore_global
	fileMode = false
	eol = lf
	autocrlf = input

[help]
  autocorrect = 0

[colour]
  ui = 1

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[credential]
  helper = cache

[format]
  pretty = oneline

[pull]
	rebase = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = master
