Host *
  UserKnownHostsFile       ~/Developer/ibm/q/projects/infra/ops-datacenter/ansible_known_hosts
  StrictHostKeyChecking    no
  VerifyHostKeyDNS         no
# PreferredAuthentications publickey
  GSSAPIAuthentication     yes
  ForwardX11               no
  AddKeysToAgent           yes
  ForwardAgent             yes
  TCPKeepAlive             yes
  ServerAliveInterval      15
  ServerAliveCountMax      4
  Compression              yes
  CheckHostIP              no
  Port                     22
  SetEnv                   LC_ALL=en_US.UTF8
  User                     javier-juarez-martinez
